<div class="container mt-5">
  <h3>投稿コメント一覧</h3>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 mt-3">
    <% @comments.each do |comment| %>
      <div class="col mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= comment.user.name %></h5>
            <p class="card-text"><%= comment.comment %></p>
            <p class="card-text"><%= comment.created_at.strftime('%Y/%m/%d') %></p>
            <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか?' }, class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
