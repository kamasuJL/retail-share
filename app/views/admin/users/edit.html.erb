<h1>admin.user.edit</h1>
<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control name" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control name" %>
  <div>会員ステータス</div>
    <div class="form-check form-check-inline">
      <%= f.radio_button :is_active, true, class: "form-check-input"  %>
      <%= f.label :"有効", class: "form-check-label mr-3" %>
    </div>
    <div class="form-check form-check-inline">
      <%= f.radio_button :is_active, false, class: "form-check-input" %>
      <%= f.label :"退会", class: "form-check-label" %>
    </div>
  </div>
  <%= f.submit "変更を保存", class: "btn btn-success" %>
<% end %>