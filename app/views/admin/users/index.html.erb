<div class="container mt-3">
  <div class="row">
    <h4 class="text-black">会員一覧</h4>
  </div>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-sm-6 col-md-4 col-lg-3 mt-3">
        <div class="card", style="background-color: #f5f5f5;">
          <div class="card-body text-center">
            <h5 class="card-title">会員ID: <%= user.id %></h5>
            <p class="card-text">
              <%= link_to user.id, admin_user_path(user.id) %>
            </p>
            <p class="card-text"><%= user.email %></p>
            <p class="card-text">
              <% if user.is_active == true %>
                <span class="text-success font-weight-bold align-middle">有効</span>
              <% else %>
                <span class="text-secondary font-weight-bold align-middle">退会</span>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <div class="row justify-content-center mt-3">
    <%= paginate @users %>
  </div>
</div>
