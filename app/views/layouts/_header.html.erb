            <li class="nav-item">
              <%= link_to destroy_user_session_path,class: 'nav-link' do %>
                <i class="fa-solid fa-file"></i>投稿一覧(no_link)
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_admin_session_path,class: 'nav-link' do %>
                <i class="fa-solid fa-door-open"></i>ログアウト
              <% end %>
            </li>
          <!--ユーザーログイン時-->
          <% elsif user_signed_in? %>
            <li class="nav-item">
              <%= link_to about_path,class: 'nav-link' do %>
                <i class="fa-solid fa-circle-info"></i>About
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path,class: 'nav-link' do %>
