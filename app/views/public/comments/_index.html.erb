<div class="row">
  <% post.comments.each do |comment| %>
    <div>
      <%= link_to user_path(comment.user) do %>
        <%= comment.user.name %>
      <% end %>
    </div>
    <div><%= comment.comment %></div>
    <div>
      <% if comment.user == current_user %>
        <%= link_to "Destroy", comment_path(comment), method: :delete, class: "btn btn-danger", remote: true %>
      <% end %>
    </div>
  <% end %>
</div>