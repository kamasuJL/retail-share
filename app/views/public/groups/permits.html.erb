<div class="container">
  <h2 class="text-center mt-3"><%= @group.name %></h2>
  <h4 class="text-center mt-3">承認待ち一覧</h4>

  <div class="row mt-5">
    <div class="col-11 col-md-12 mx-auto">
      <% if @permits.present? %>
        <div class="list-group">
          <% @permits.each do |permit| %>
            <div class="list-group-item">
              <%= link_to permit.user.name, user_path(permit.user.id), class: "text-dark font-weight-bold" %>
              <div class="float-right">
                <%= link_to '加入許可', group_group_users_path(@group, permit_id: permit.id), method: :post, class: "btn btn-sm btn-info" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-center">承認待ちユーザーはいません。</p>
      <% end %>
    </div>
  </div>

  <div class="row mt-5">
    <div class="col-md-9 mx-auto">
      <p class="text-center">
        <%= link_to "戻る", group_path(@group), class: 'text-dark font-weight-bold' %>
      </p>
    </div>
  </div>
</div>
