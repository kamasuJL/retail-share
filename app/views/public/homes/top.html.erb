          <style>
        
          .slider {
            max-width: 100%;
            max-height: 100%;
            display: flex;
            overflow: hidden;
            margin: 0 auto;
          }

          .slider > :first-child {
            animation: scroll 30s infinite linear;
          }
      
          @keyframes scroll {
            0% { margin-left: 0; }
            20% { margin-left: -100%; }
            50% { margin-left: -200%; }
            70% { margin-left: -300%; }
            100% { margin-left: -400%; }
          }
        </style>
        
        <body>
