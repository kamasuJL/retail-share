<div class='container'>
  <h2 class="heading-sub mt-3">投稿編集</h2>
  <%= render 'layouts/error_messages', resource: @post %>
  
  <%= form_with model:@post, local:true do |f| %>
    <div class="form-group">
      <%= f.label :数値成果を挙げた分野 %>
      <%= f.text_field :title, class: "form-control name" %>
    </div>
    
    <div class="form-group">
      <h4>自身で考える成果段階</h4>
      <div class="form-check">
      <%= f.radio_button :phase, Post.phases.key(0), class: "form-check-input" %>
      <%= f.label :phase_improvement, Post.phases_i18n[:improvement] %>
      </div>
      <div class="form-check">
      <%= f.radio_button :phase, Post.phases.key(1), class: "form-check-input" %>
      <%= f.label :phase_development, Post.phases_i18n[:development] %>
      </div>
      <div class="form-check">
      <%= f.radio_button :phase, Post.phases.key(2), class: "form-check-input" %>
      <%= f.label :phase_leaping, Post.phases_i18n[:leaping] %>
      </div>
    </div>
    
    <div class="form-group">
      <label for="post_body">成果の詳細</label>
      <%= f.text_area :body, class: "form-control", id: "post_body" %>
    </div>
    
    <div class="form-group">
      <label for="post_way">具体的な手段</label>
      <%= f.text_area :way, class: "form-control", id: "post_way" %>
    </div>

    <div class="form-group">
      <label for="post_investment">頻度・投資時間量・継続期間</label>
      <%= f.text_field :investment, class: "form-control", id: "post_investment" %>
    </div>

    <div class="form-group">
      <%= f.submit "編集内容を保存する", class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>