<h1>new.view</h1>
<%= form_with model: @post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>フェーズ</h4>
  <%= f.text_field :phase %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <h4>方法</h4>
  <%= f.text_field :way %>
  <h4>投資時間</h4>
  <%= f.text_area :investment %>
  
  <%= f.submit '投稿' %>
<% end %>