<div class="container">
  <h2 class="heading-sub mt-3">新規作成</h2>
  <%= render 'layouts/error_messages', resource: @post %>

  <%= form_with model: @post, class: "mt-4" do |f| %>
    <div class="form-group">
      <label for="post_title" class="label">数値成果を挙げた分野</label>
      <%= f.text_field :title, placeholder: "例）営業", class: "form-control", id: "post_title" %>
    </div>
    
    <div class="form-group">
      <div class="label">自身で考える成果段階</div>
    </div>

    <div class="form-group">

      <div class="form-check">
        <%= f.radio_button :phase, Post.phases.key(0), class: "form-check-input", id: "phase_improvement" %>
        <label class="form-check-label" for="phase_improvement"><%= Post.phases_i18n[:improvement] %></label>
      </div>

      <div class="form-check">
        <%= f.radio_button :phase, Post.phases.key(1), class: "form-check-input", id: "phase_development" %>
        <label class="form-check-label" for="phase_development"><%= Post.phases_i18n[:development] %></label>
      </div>

      <div class="form-check">
        <%= f.radio_button :phase, Post.phases.key(2), class: "form-check-input", id: "phase_leaping" %>
        <label class="form-check-label" for="phase_leaping"><%= Post.phases_i18n[:leaping] %></label>
      </div>
    </div>

    <div class="form-group">
      <label for="post_body" class="label">成果の詳細</label>
      <%= f.text_field :body, placeholder: "例）社内年間優秀賞受賞", class: "form-control", id: "post_body" %>
    </div>

    <div class="form-group">
      <label for="post_way" class="label">具体的な手段</label>
      <%= f.text_area :way, placeholder: "例）トークスクリプトの作成・修正、成約率から逆算してアポ数の目標設定", class: "form-control", id: "post_way" %>
    </div>

    <div class="form-group">
      <label for="post_investment" class="label">頻度・投資時間量・継続期間</label>
      <%= f.text_field :investment, placeholder: "例）3時間、週5日、2年間", class: "form-control", id: "post_investment" %>
    </div>
    
    <div class="form-group">
      <%= f.submit '投稿', class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>

