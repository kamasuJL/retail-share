<div class="container">
  <div class="row mb-4">
    <div class="col-md-12">
      <h2 class="heading mb-4">投稿詳細</h2>
      <hr class="my-3">
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= @post.title %></h2>

          <div class="card-text">
            <label for="post_body">⚫︎タイトル</label>
            <p><%= @post.body %></p>
          </div>

          <div class="card-text">
            <label for="post_phase">⚫︎成果段階</label>
            <p><%= @post.phase_i18n %></p>
          </div>

          <div class="card-text">
            <label for="post_way">⚫︎具体的な手段</label>
            <p><%= @post.way %></p>
          </div>

          <div class="card-text">
            <label for="post_investment">⚫︎頻度・投資時間量・継続期間</label>
            <p><%= @post.investment %></p>
          </div>

          <div class="card-text">
            <label for="comments-count">⚫コメント数</label>
            <p><%= render "public/comments/count", post: @post %></p>
          </div>

          <% if current_user == @user %>
            <%= link_to "投稿内容の編集", edit_post_path(@post), class: "btn btn-primary mr-2 mb-2" %>
            <%= link_to "投稿の削除", @post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger mb-2" %>
          <% end %>
        </div>
      </div>
      
      <div class="comments-index mt-3">
        <%= render "public/comments/index", post: @post %>
      </div>
      <div class="comments-form">
        <%= render "public/comments/form", post: @post, comment: @comment %>
      </div>
    </div>
  </div>
</div>
