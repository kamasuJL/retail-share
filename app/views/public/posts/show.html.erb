<h2>post.show.page</h2>
<p><%= @post.title %></p>
<p><%= @post.body %></p>
<p><%= @post.phase_i18n %></p>
<p><%= @post.way %></p>
<p><%= @post.investment %></p>
<% if current_user == @user %>
  <%= link_to "投稿内容の編集", edit_post_path(@post), class: "btn btn-primary" %>
  <%= link_to "投稿の削除", @post, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-danger destroy_post_#{@post.id}" %>
<% end %>
