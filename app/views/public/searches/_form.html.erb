<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <div class="d-flex justify-content-end align-items-center">
      <div>
        <%= f.select :model, options_for_select({ "User" => "user", "Post" => "post" }), {}, class: "select-box" %>
      </div>
      <div>
        <%= f.text_field :content, placeholder: "Search for", id: "search-bar" %>
      </div>
    </div>
    <%= f.button type: "submit", class: "search-icon-button" do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  <% end %>
<% end %>