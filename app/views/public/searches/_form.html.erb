<% if user_signed_in? %>
  
  <%= form_with url: search_path, method: :get, local: true do |f| %>
    <%= f.text_field :content, placeholder: "Search for", id: "search-bar" %>
    
    <%= f.select :model, options_for_select({ "User" => "user", "Post" => "post" }), class: "search-select" %>
    <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }), class: "search-select" %>
    
    <%= f.button type: "submit", class: "search-icon-button" do %>
      <%= image_tag 'search-icon.png', style: "width: 75px; height: 75px;" %>
    <% end %>
  <% end %>

<% end %>