<% if @model == 'user' %>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h3 class="text-center">Users search for "<%= @content %>"</h3>
        <%= render 'public/users/index', users: @records %>
      </div>
    </div>
  </div>
<% elsif @model == 'post' %>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h3 class="text-center">Posts search for "<%= @content %>"</h3>
        <%= render 'public/posts/index', posts: @records %>
      </div>
    </div>
  </div>
<% end %>
