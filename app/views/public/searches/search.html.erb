<% if @model == 'user' %>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h2 class="heading-sub mt-3 text-center">"<%= @content %>"を含むユーザーの検索結果</h2>
        <%= render 'public/users/index', users: @records %>
      </div>
    </div>
  </div>
<% elsif @model == 'post' %>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h2 class="heading-sub mt-3 text-center">"<%= @content %>"を含む投稿の検索結果</h2>
        <%= render 'public/posts/index', posts: @records %>
      </div>
    </div>
  </div>
<% else @model == 'group' %>
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <h2 class="heading-sub mt-3 text-center">"<%= @content %>"を含むグループの検索結果</h2>
        <%= render 'public/groups/index', groups: @records %>
      </div>
    </div>
  </div>
<% end %>
