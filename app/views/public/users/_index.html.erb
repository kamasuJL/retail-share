<div class="container">
  <div class="row mb-4">
    <div class="col-md-12 mt-3">
      <% users.each do |user| %>
        <div class="row">
          <div class="col-md-2">
            <label>ユーザー名</label>
          </div>
          <div class="col-md-2">
            <p><%= link_to user.name, user_path(user) %></p>
          </div>
        </div>
        <hr class="mt-1">
      <% end %>
    </div>
  </div>
</div>