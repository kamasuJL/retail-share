<div class='container'>
  <div class='row'>
    <div class="col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/error_messages', resource: @user %>
      <h2 class="heading-sub mt-3">ユーザー編集</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "label" %>
          <%= f.text_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :プロフィール画像, class: "label" %>
          <label for="profile_image" class="custom-file">
            <i class="fa-solid fa-camera"></i>
            <span class="ml-2">画像を選択する</span>
          </label>
          <%= f.file_field :profile_image, id: "profile_image", class: "hidden", accept: "image/*" %>
          <span class="select-image">選択されていません</span>
        </div>

        <div class="form-group">
          <%= f.submit "編集内容を保存する", class: 'btn btn-secondary' %>
        </div>
        <div class="form-group">
          <%= link_to "退会する", user_unsubscribe_path(current_user), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_pack_tag 'form', 'data-turbolinks-track': 'reload' %>