<div class='container'>
  <div class='row'>
    <div class="col-lg-5 px-5 px-sm-0 mx-auto">
      <%= render 'layouts/error_messages', resource: @user %>
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control name" %>
        </div>
        <div class="form-group">
          <%= f.submit "編集内容を保存する", class: 'btn btn-secondary' %>
        </div>
        <div class="form-group">
          <%= link_to "退会する", user_unsubscribe_path(current_user), class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%#= javascript_pack_tag 'user_edit' %>