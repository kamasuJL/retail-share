<div class="my-page-container">
  <div class="my-page-header">
    <h2 class="heading">マイページ</h2>
    <hr class="my-3">
  </div>

  <div class="my-page-content row">
    <!-- サイドバー -->
    <div class="my-page-sidebar col-md-3">
      <div class="mb-4">
        <h4>登録情報</h4>
        <hr class="my-3">
        <div>
          <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
        </div>
        <div>
          <p>ユーザー名: <%= @user.name %></p>
        </div>
        <div>
          <p>メールアドレス: <%= @user.email %></p>
        </div>
        <% unless @user.guest_user? %>
          <div>
            <%= link_to edit_user_path(@user.id), class: "btn btn-info mt-3" do %>
              <i class="fa-solid fa-gear"></i>会員情報の編集
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <h4>新規投稿</h4>
        <hr class="my-3">
        <div>
          <%= link_to new_post_path, class: 'btn btn-secondary' do %>
            <i class="fa-solid fa-pen-nib"></i>投稿フォーム
          <% end %>
        </div>
      </div>
      <div class="mb-4">
        <h4>グループ</h4>
        <hr class="my-3">
      </div>
      <div>
        <%= link_to new_group_path, class: 'btn btn-secondary' do %>
          <i class="fa-regular fa-square-plus"></i>グループ作成
        <% end %>
        <%= link_to groups_path, class: 'btn btn-secondary' do %>
          <i class="fa-solid fa-list"></i>グループ一覧
        <% end %>
      </div>
    </div>

    <!-- メインコンテンツ -->
    <div class="my-page-main col-md-9">
      <div class="row">
        <div class="col-md-12">
          <h4>あなたの投稿</h4>
          <hr class="my-3">
          <%= render 'public/posts/index', posts: @posts %>
        </div>
      </div>
    </div>
  </div>
</div>
