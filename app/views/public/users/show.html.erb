<div class="container">
  <div class="row mb-4">
    <div class="col-md-12">
      <h1 class="font-weight-bold mb-4">会員情報</h1>
      <div class="card">
        <div class="card-body">
          <h2 class="card-title"><%= @user.name %></h2>
          <p class="card-text"><%= @user.email %></p>
          <% if current_user == @user %>
            <%= link_to "会員情報の編集", edit_user_path(@user.id), class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>