<div class="container">
  <div class="row mb-4">
    <div class="col-md-12">
      <h1 class="font-weight-bold mb-4">会員情報</h1>
      
      <div class="row">
        <div class="col-md-2">
          <label>ユーザー名</label>
        </div>
        <div class="col-md-2">
          <p><%= @user.name %></p>
        </div>
      </div>

      <% if current_user == @user %>
        <%= link_to "会員情報の編集", edit_user_path(@user.id), class: "btn btn-primary" %>
      <% end %>
      
      <div class="row">
        <div class="col-md-2">
          <label>投稿履歴</label>
        </div>
        <div class="col-md-10">
          <p><%= render 'public/posts/index',posts: @posts %></p>
        </div>
      </div>
      
    </div>
  </div>
</div>